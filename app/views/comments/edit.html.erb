<% provide(:title, "Edit Comment") %>
<h1>Edit the Comment</h1>

<div class="row">
  <div >
    <%= form_for(@comments) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Save changes"%>
    <% end %>

  </div>
</div>