<div class="container-fluid">
<h1>User Directory</h1>
  <%= link_to 'New User', signup_path, :class => "btn btn-primary", :type => "button" %><br><br>
  <% @users.each do |u| %> 
    <div class="user">
      <h2>Email: <%= u.email %></h2>
      <ul class="list-group">
        <li class="list-group-item">Name: <%= u.first_name %> <%= u.last_name %></li> 
        <li class="list-group-item">Permission Role: <%= u.role =%></li>
        <li class="list-group-item">Last Updated: <%= u.updated_at =%></li>
      </ul>
    </div> 
  <% end %><br><br>
</div>