<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
      <!-- We use For the login form, we don't have a Session model, so we refer to the parameters above. --> 
			<%= form_for(:session, url: login_path) do |f| %> 
      <%= f.email_field :email, :placeholder => "Email" %> 
      <%= f.password_field :password, :placeholder => "Password" %> 
      <%= f.submit "Log in", class: "btn-submit" %>
      <% end %>
    </div>
    <h3>If you are not a current user:</h3>
    <%= link_to "Signup", 'signup' %>
	</div>
</div>